{
  "name": "innocode-digital/php-cs",
  "version": "1.0.0",
  "type": "phpcodesniffer-standard",
  "description": "Innocode Coding Standards.",
  "license": "MIT",
  "require": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "slevomat/coding-standard": "^8.3",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^2.3"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "install-cs": "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run",
    "post-install-cmd": "@install-cs",
    "post-update-cmd": "@install-cs"
  }
}
